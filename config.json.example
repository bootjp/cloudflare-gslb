{
  "cloudflare_api_token": "YOUR_CLOUDFLARE_API_TOKEN",
  "cloudflare_zone_id": "YOUR_CLOUDFLARE_ZONE_ID",
  "check_interval_seconds": 60,
  "origins": [
    {
      "name": "example.com",
      "record_type": "A",
      "health_check": {
        "type": "https",
        "endpoint": "/health",
        "host": "example.com",
        "timeout": 5
      },
      "priority_failover_ips": [
        "192.168.1.1"
      ],
      "failover_ips": [
        "192.168.1.2",
        "192.168.1.3",
        "192.168.1.4"
      ],
      "proxied": true,
      "return_to_priority": true
    },
    {
      "name": "api.example.com",
      "record_type": "A",
      "health_check": {
        "type": "http",
        "endpoint": "/status",
        "host": "api.example.com",
        "timeout": 5
      },
      "priority_failover_ips": [
        "10.0.0.1"
      ],
      "failover_ips": [
        "10.0.0.2",
        "10.0.0.3"
      ],
      "proxied": true,
      "return_to_priority": true
    },
    {
      "name": "ipv6.example.com",
      "record_type": "AAAA",
      "health_check": {
        "type": "icmp",
        "timeout": 5
      },
      "priority_failover_ips": [
        "2001:db8::1"
      ],
      "failover_ips": [
        "2001:db8::2",
        "2001:db8::3",
        "2001:db8::4"
      ],
      "proxied": false,
      "return_to_priority": true
    }
  ]
} 